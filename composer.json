{
    "name": "celdia/template",
    "description": "Template for PHP project",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "~8.2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.4",
        "pestphp/pest": "^1.21",
        "infection/infection": "^0.26.15"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "infection/extension-installer": true
        }
    }
}
